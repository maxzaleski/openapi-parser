# See http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 2

# For non-go files, we indent with two spaces. In go files we indent with tabs but still set
# indent_size to control the github web viewer.
indent_size=2
indent_style = space

# Makefiles are broken without using actual tabs for indentation.
[Makefile]
indent_style = tab

[*.go]
indent_style = tab
